<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Slovak_Travel_Guide.Registration.LoginPage">

    <ContentPage.Content>
        
        <ScrollView>
            
            <StackLayout>
                
                <Grid VerticalOptions="CenterAndExpand">

                    <Grid.RowDefinitions>

                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>

                    </Grid.RowDefinitions>

                    <Entry Placeholder="UserName" x:Name="EntryUser" Grid.Row="0" Text="{Binding TakeName, Mode=OneWayToSource}"/>
                    <Entry Placeholder="Password" x:Name="EntryPassword" IsPassword="True" Grid.Row="1" Text="{Binding TakePassword, Mode=OneWayToSource}"/>
                    <Button Text="Login" Grid.Row="2" BackgroundColor="#0077BE" TextColor="White" Command="{Binding LoginBtnClicked}"/>
                    <Button Text="SignUp" Grid.Row="3" Command="{Binding BackToSignUpPageBtn}"/>

                </Grid>
                
            </StackLayout>
            
        </ScrollView>
        
    </ContentPage.Content>
    
</ContentPage>