<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Slovak_Travel_Guide.Sights.Caves"
             BackgroundColor="#E0E0E0">

    <ScrollView
        Orientation="Vertical">
        <StackLayout>

            <Label
                VerticalOptions="Start"
                FontSize="50"
                Text="Caves"
                TextColor="Green"
                FontAttributes="Bold"
                HorizontalOptions="Center"/>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="120"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>

                <Grid
                    Grid.Row="0"
                    Grid.Column="2">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Text="*****"
                        TextColor="Orange"
                        FontSize="60"/>
                </Grid>

                <Grid
                    Grid.Row="1"
                    Grid.Column="2">
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Text="*****"
                        TextColor="Orange"
                        FontSize="60"/>
                </Grid>

                <Grid
                    Grid.Row="2"
                    Grid.Column="2">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Text="*****"
                        TextColor="Orange"
                        FontSize="60"/>
                </Grid>

                <Grid
                    Grid.Row="3"
                    Grid.Column="2">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Text="*****"
                        TextColor="Orange"
                        FontSize="60"/>

                    <Button
                        Grid.Row="1"
                        Grid.Column="1"
                        Text="GPS"
                        BackgroundColor="LightGray"
                        TextColor="Green"
                        FontSize="15"
                        FontAttributes="Bold"/>
                </Grid>

                <Image
                    Grid.Row="0"
                    Grid.Column="1"
                    Aspect="AspectFit"
                    Source="https://static.thenounproject.com/png/200363-200.png"/>

                <Image
                    Grid.Row="1"
                    Grid.Column="1"
                    Aspect="AspectFill"
                    Source="https://static.thenounproject.com/png/1282444-200.png"/>

                <Image
                    Grid.Row="2"
                    Grid.Column="1"
                    Aspect="AspectFill"
                    Source="https://static.thenounproject.com/png/1465819-200.png"/>

                <Image
                    Grid.Row="3"
                    Grid.Column="1"
                    Aspect="AspectFit"
                    Source="https://d338t8kmirgyke.cloudfront.net/icons/icon_pngs/000/007/625/original/cave.png"/>

                <Label
                    Text="jaskyna 1"
                    Grid.Row="0"
                    Grid.Column="2"
                    FontSize="30"
                    TextColor="Black"/>

                <Label
                    Text="jaskyna 2"
                    Grid.Row="1"
                    Grid.Column="2"
                    FontSize="30"
                    TextColor="Black"/>

                <Label
                    Text="jaskyna 3"
                    Grid.Row="2"
                    Grid.Column="2"
                    FontSize="30"
                    TextColor="Black"/>

                <Label
                    Text="jaskyna 4"
                    Grid.Row="3"
                    Grid.Column="2"
                    FontSize="30"
                    TextColor="Black"/>


            </Grid>
        </StackLayout>
        
    </ScrollView>
    
</ContentPage>