<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Slovak_Travel_Guide.Sights.Caves"
             BackgroundColor="#E0E0E0">
    
    <StackLayout>
        
        <Label
            Text="Caves"
            FontSize="50"
            TextColor="Green"
            HorizontalOptions="Center"
            FontFamily="cursive"/>
        <ListView>
            <ListView.ItemTemplate>
                <DataTemplate>
                <ViewCell>
                        <Grid
                            ColumnDefinitions="10, * , *, 10"
                            RowDefinitions="*,*"
                           >
                            <Image
                                Source="https://travelhacker.blog/wp-content/uploads/2019/02/Jaskyne-Crystal-Caves.jpg"
                                Grid.Row="1"
                                Grid.RowSpan="2"
                                Grid.Column="1"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </StackLayout>
    
</ContentPage>